name:                packman
version:             0.1
synopsis:            Serialization
license:             BSD3
author:              Michael Budde, AsbjÃ¸rn
maintainer:          mbudde@gmail.com
build-type:          Simple
cabal-version:       >= 1.8
tested-with:         GHC==7.8.2
extra-source-files:  cbits/pack.c

flag debug
  description:       Enable debug support
  default:           False

library
  hs-source-dirs:    src
  exposed-modules:   Data.Serialize.Packman
  build-depends:     base >= 4.5.0,
                     ghc-prim
  if flag(debug)
    ghc-options:     -debug

  c-sources:         cbits/Wrapper.cmm
                     cbits/Pack.c
                     cbits/Hash.c
                     cbits/Utils.c
  include-dirs:      cbits
  if flag(debug)
    cc-options:      -g

executable test
  hs-source-dirs:    test
  main-is:           Main.hs
  build-depends:     base >= 4.5.0,
                     packman
  if flag(debug)
    ghc-options:     -debug
